<swiper indicator-dots="true"
  autoplay="true" interval="5000" duration="1000" style="height:200px;">
  <block wx:for="{{goods.images}}" wx:key="">
    <swiper-item>
      <image src="{{item}}" mode="aspectFill" class="swiper-image"/>
    </swiper-item>
  </block>
</swiper>
<view style="display: flex; flex-direction: column; justify-content: space-between;">
	<text>{{goods.title}}</text>
	<text>{{goods.price}}</text>
</view>
<view>
	<image wx:for="{{goods.detail}}" wx:key="" mode="aspectFill"></image>
</view>
<view style="display: flex; flex-direction: row; justify-content: space-between;">
	<button class="add-cart" bindtap="addCart">加入购物车</button>
</view>
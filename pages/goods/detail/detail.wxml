<swiper class="images" indicator-dots="true"
  autoplay="true" interval="5000" duration="1000" style="height:{{galleryHeight}}px;">
  <block wx:for="{{goods.images}}" wx:key="">
    <swiper-item>
      <image src="{{item}}" mode="aspectFill" class="swiper-image" bindtap="previewImage" data-current="{{index}}"/>
    </swiper-item>
  </block>
</swiper>
<view class="summary">
	<text class="title">{{goods.title}}</text>
	<text class="price">￥ {{goods.price}}</text>
</view>
<view class="detail">
	<image wx:for="{{goods.detail}}" src="{{item}}" wx:key="" mode="" bindload="bindImageLoad" data-index="{{index}}" style="height: {{detailImagesHeight[index]}}px;"></image>
</view>
<view class="footer">
  <view class="favor">
    <image src="../../../images/favor.png" class="favor-image" />
    <text class="favor-text">收藏</text>
  </view>
	<button class="add-cart" bindtap="addCart">加入购物车</button>
</view>
page {
	display: flex;
	flex-direction: column;
}

.desc {
	line-height: 40px;
	color: #333;
	text-align: center;
	display: block;
	padding: 0 20px;
}

image {
	width: 70%; 
	margin: 0 auto;
}

/*金额*/
.amount {
	color: #48c23d;
	font-size: 88rpx;
	text-align: center;
	line-height: 140rpx;
}

/*单位*/
.amount:after {
	font-size: 14px;
	color: gray;
	content: '元';
}

/*赞赏按钮*/
button {
	width: 90%;
	margin: 20px auto;
}

/*画布*/
#canvas-ruler {
	width: 1000px;
	/*height: 80px;*/
	border: 1px solid #ccc;
}

/*游标*/
#canvas-cursor {
	width: 100%;
	height: 40px;
	border: 1px solid #cc1;
}